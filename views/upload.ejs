<%- include('partials/header')%>

    <body>
        <div class="container-md rounded-2 mt-2">
            <div class="card">
                <div class="card-header">
                    <div class="head">
                        <h1 class="text-center">Change Avatar</h1>
                    </div>
                </div>
                <div class="card-body">
                    <form class="" action="" method="post" enctype="multipart/form-data">
                        <div class="row mb-3 bg-body pt-1 pb-0">
                            <label for="Title" class="col-sm-2 col-form-label txt-edit">Avatar</label>
                            <div class="col-sm-10">
                                <input type="file" class="form-control" name="avatar" placeholder="choose file">
                            </div>
                        </div>
                        <div class="row mb-3 mt-3">
                            <label for="title" class="col-sm-2 col-form-label">Preview</label>
                            <div class="col-sm-10">
                                <img id="avatarImg" src="<%= pp? `../images/${pp}` : `../images/sampelpic.jpg` %>"
                                    alt="avatar" class="preview">
                            </div>
                        </div>
                </div>
                <div class="card-footer">
                    <div class="foot-form">
                        <div class="formBtm">
                            <button class="btn btn-primary" type="submit" value="Upload!"><i
                                    class="fa-solid fa-floppy-disk"></i></button>
                            <a href="/users">
                                <button class="btn btn-warning" type="button"><i
                                        class="fa-solid fa-rotate-left"></i></button>
                            </a>
                        </div>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </body>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const avatar = document.querySelector('input[name="avatar"]');
            const avatarImg = document.getElementById('avatarImg')

            avatar.onchange = () => {
                const [file] = avatar.files
                if (file) {
                    avatarImg.src = URL.createObjectURL(file)
                }
            }
        })
    </script>
    <%- include('partials/footer')%>