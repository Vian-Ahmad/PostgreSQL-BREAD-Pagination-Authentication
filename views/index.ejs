<%- include('partials/header')%>
  <div class="card">
    <div class="card-header">
      <div class="head">
        <h1 class="text-center">PostgreSQL Bread (Browse, Read, Add, Delete)</h1>
      </div>
    </div>
    <div class="card-body">
      <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Title</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="name" placeholder="insert your title">
        </div>
      </div>
      <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Deadline</label>
