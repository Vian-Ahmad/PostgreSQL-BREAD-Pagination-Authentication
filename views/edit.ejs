<%- include('partials/header')%>

    <body>
        <div class="container-md rounded-2 mt-2">
            <div class="card">
                <div class="card-header">
                    <div class="head">
                        <h1 class="text-center">Updating Data</h1>
                    </div>
                </div>
                <div class="card-body">
                    <form class="" action="" method="post">
                        <div class="row mb-3 bg-body pt-3">
                            <label for="Title" class="col-sm-2 col-form-label txt-edit">Title</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="title" placeholder="insert your title" name="title"
                                    value="<%= data[0].title %>" required>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Deadline</label>
                            <div class="col-sm-10">
                                <div class="input-group date" for="datepicker">
                                    <input type="datetime" class="form-control" name="deadline" id="datepicker" value="<%= moment(data[0].deadline).format('YYYY-MM-DD HH:mm')%>" required>
                                </div>
                            </div>
                        </div>
                        <div class="position-relative">
                            <fieldset class="row mb-3">
                                <legend class="col-form-label col-sm-2 pt-0">Complete</legend>
                                <div class="col-sm-10">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="gridCheck1"  name="complete" <%= data[0].complete ? 'checked' : '' %> >
                                        <label class="form-check-label" for="gridCheck1">
                                            Done
                                        </label>
                                    </div>
                            </fieldset>
                        </div>
                </div>
                <div class="card-footer">
                    <div class="foot-form">
                        <div class="formBtm">
                            <button class="btn btn-primary" type="submit"><i
                                    class="fa-solid fa-floppy-disk"></i></button>
                            <a href="/users">
                                <button class="btn btn-warning" type="button"><i
                                        class="fa-solid fa-rotate-left"></i></button>
                            </a>
                        </div>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </body>
    <%- include('partials/footer')%>